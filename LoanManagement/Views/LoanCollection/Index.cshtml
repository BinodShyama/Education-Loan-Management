@section Scripts{
    <script>
        $('#tbl-col').DataTable({
            processing: true,
            responsive: true,
            type: "GET",
            scrollX: true,
            columns: [
                { "title": "Date", "data": "voucherDate" },
                { "title": "Voucher No.", "data": "voucherNo" },
                { "title": "Name", "data": "name" },
                { "title": "Amount", "data": "amount" },
                { "title": "Remarks", "data": "remarks" },
                { "title": "Status", "data": "status" },
                { "title": "", "data": "action", width: "20px" }
            ],
            ajax: "/LoanCollection/GetLoanCollectionList"
        });
    </script>
}